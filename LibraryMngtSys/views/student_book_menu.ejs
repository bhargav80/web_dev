<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>All Books</title>
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #ffe6e6; /* Light pink background */
        margin: 0;
        padding: 20px;
    }

    h1 {
        text-align: center;
        color: #ff1493; /* Deep pink color for heading */
    }

    .book-list {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
        margin-top: 20px;
    }

    .book-item {
        background-color: #fff;
        border-radius: 10px;
        padding: 15px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        position: relative; /* Added for positioning the delete button */
    }

    .book-item h2 {
        font-size: 20px;
        margin-bottom: 10px;
        color: #ff1493; /* Deep pink color for book titles */
    }

    .book-item p {
        margin: 5px 0;
        color: #333; /* Dark color for book details */
    }

    strong {
        font-weight: bold;
    }

    /* Style for the add button */
    .add-btn {
        background-color: #ff69b4; /* Pink background for button */
        color: #fff; /* White color for button text */
        border: none;
        border-radius: 3px;
        padding: 5px 10px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .add-btn:hover {
        background-color: #ff1493; /* Darker pink on hover */
    }
</style>
</head>
<body>
<h1>All Books</h1>
<div class="book-list">
    <% books.forEach(book => { %>
    <div class="book-item">
        <form action="/student/addBook/<%= book._id %>?_method=PATCH" method="post">
        <input type="submit" value="Add" class="add-btn">
      </form>
      <h2><%= book.title %></h2>
      <p><strong>Author:</strong> <%= book.author %></p>
      <p><strong>Title:</strong> <%= book.title %></p>
      <p><strong>Quantity:</strong> <%= book.quantity %></p>
    </div>
    <% }); %>
</div>
</body>
</html>
